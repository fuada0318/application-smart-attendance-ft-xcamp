<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LoginPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="332dp">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="455dp"
            android:layout_height="332dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/login" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_medium"
        android:gravity="center_horizontal"
        android:text="LOGIN PAGE"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF" />

    <EditText
        android:id="@+id/getEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50px"
        android:layout_marginHorizontal="100px"
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/baseline_person"
        android:drawablePadding="6dp"
        android:ems="10"
        android:fontFamily="@font/rubik"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textColorHint="@color/gray" />

    <EditText
        android:id="@+id/getPasswd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30px"
        android:layout_marginHorizontal="100px"
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/lock_solid"
        android:drawablePadding="6dp"
        android:ems="10"
        android:fontFamily="@font/rubik"
        android:hint="password"
        android:textColorHint="@color/gray"
        android:inputType="textPassword"
        android:paddingStart="5dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50px"
        android:layout_marginHorizontal="100px"
        android:fontFamily="@font/rubik_medium"
        android:text="LOGIN"
        android:textColor="#FFFFFF" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.962"
            app:srcCompat="@drawable/logoxl" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>